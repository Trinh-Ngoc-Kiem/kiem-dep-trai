{% extends '/admin/admin.html.twig' %}

{% block title %}Cập nhật loại sách {{ category.categoryName }}{% endblock %}

{% block content %}
    <section class="content-header">
        <h1>
            Cập nhật loại sách {{ category.categoryName }}
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fas fa-tachometer-alt"></i>Home</a></li>
            <li><a href="#">Loại sách</a></li>
            <li class="active">Cập nhật</li>
        </ol>
    </section>

    <section class="content">
        <div class="row">
            <form role="form" action="{{ path('category-update', {id : category.id}) }}" method="POST">
                <input type="hidden" name="token" value="{{ csrf_token('update-category') }}"/>
                <div class="col-xs-12 col-md-8">
                    <div class="box box-primary">
                        <div class="box-header with-border">
                            <h3 class="box-title">Nội dung</h3>
                        </div>

                        <div class="box-body">
                            <div class="form-group">
                                <label for="exampleInputEmail1">Tên loại sách</label>
                                <input type="text" class="form-control" name="category_name" value="{{ category.categoryName }}" placeholder="Tên loại sách" required>
                            </div>
                        </div>

                        <div class="box-footer">
                            <button type="submit" class="btn btn-warning">Cập nhật</button>
                        </div>
                    </div>
                </div>

            </form>
        </div>
    </section>
{% endblock %}